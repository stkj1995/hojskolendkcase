<div class="relative">
  <!-- Burger Icon -->
  <button
    onclick="toggleMenu()"
    aria-label="Toggle menu"
    class="burger-icon p-2 focus:outline-none lg:hidden"
  >
    <div class="space-y-1">
      <span
        class="block w-6 h-0.5 bg-white transition-transform duration-300"
      ></span>
      <span
        class="block w-6 h-0.5 bg-white transition-opacity duration-300"
      ></span>
      <span
        class="block w-6 h-0.5 bg-white transition-transform duration-300"
      ></span>
    </div>
  </button>

  <!-- Menu -->
  <div
    class="menu absolute top-12 right-0 bg-gray-100 p-4 rounded shadow-lg lg:static lg:bg-transparent lg:p-0 lg:shadow-none lg:flex lg:space-x-6 hidden"
  >
    <ul class="space-y-4 lg:space-y-0 lg:flex lg:items-center lg:space-x-6">
      <li><a href="/" class="block text-black hover:text-gray-700">Hjem</a></li>
      <li><a href="/about" class="block text-black hover:text-gray-700">Om os</a></li>
      <li><a href="/services" class="block text-black hover:text-gray-700">Tjenester</a></li>
      <li><a href="/contact" class="block text-black hover:text-gray-700">Kontakt</a></li>
    </ul>
  </div>
</div>

<script>
  // Initial tilstand for menuen (lukket)
  let isOpen = false;

  // Funktion til at togglere åbning/lukning af menuen
  function toggleMenu() {
    // Skift tilstand (åben/lukket)
    isOpen = !isOpen;

    // Find menuen og burger-ikonet i DOM'en
    const menu = document.querySelector('.menu');
    const burgerIcon = document.querySelector('.burger-icon');

    // Toggler klassen 'hidden' på menuen for at vise/skjule den
    menu.classList.toggle('hidden', !isOpen);

    // Optional: du kan ændre ikonet, når menuen er åben/åben
    if (isOpen) {
      // Skift burger-ikonet til krydsikon (f.eks. ved at rotere dem)
      burgerIcon.classList.add('open');
    } else {
      // Skift burger-ikonet tilbage til standard
      burgerIcon.classList.remove('open');
    }
  }
</script>

<style>
  /* Burger-ikonets tilstand for at rotere til et krydsikon */
  .burger-icon.open div span:nth-child(1) {
    transform: rotate(45deg) translateY(8px);
  }

  .burger-icon.open div span:nth-child(2) {
    opacity: 0;
  }

  .burger-icon.open div span:nth-child(3) {
    transform: rotate(-45deg) translateY(-8px);
  }
</style>
