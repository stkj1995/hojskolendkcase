---
import { Image } from 'astro:assets';
import infomoedeimg from "../assets/images/infomoedeimg.png";
import hvid_cirkel from "../assets/images/hvid_cirkel.png";
import Button from './Button.astro';
---

<!-- STYLING NOTE: Img skal være bredere og have en større border radius -->
<section class="pt-10 pl-5 pb-20 mx-4 ml-6 md:grid md:grid-cols-2 md:px-20 md:mb-36 md:pt-28 md:pl-14 md:mx-12" style="background-color: #7794B0; border-radius: 30px;">
    <!-- tekst -->
    <div class="px-8 pl-10 pb-32 text-white">
        <h3 class="pt-10 pb-5 text-sm md:text-lg" style="font-family: 'Onest-Black' sans-serif;">EN VIGTIG MULIGHED</h3>
        <h2 class="pb-6 pt-4 text-3xl md:text-5xl" style="font-weight: 900; font-family: 'Onest-Black' sans-serif;">INFOMØDER</h2>
        <p class="pr-8 text-base md:text-base" style="font-family: 'Onest-Black' sans-serif;">Hvis du drømmer om et fantastisk rejseeventyr med masser af adventure, vilde naturoplevelser og spændende kulturmøder så smut forbi et af vores hyggelige infomøder i København eller Aarhus – eller mød os på et online infomøde.
        </p>

        <!-- seperat grid til kbh, aarhus og online -->
        <div class="md:grid md:grid-cols-2 md:mr-40">
            <!-- København -->
            <div class="pt-10 md:mr-24 md:relative md:top-5">
                <h3 class="pb-6 text-sm md:text-lg" style="font-family: 'Onest-Black' sans-serif;">KØBENHAVN</h3>
                <div class="flex items-center gap-4 md:gap-14 md:relative md:top-1">
                    <p class="flex-shrink-0 text-base md:text-base" style="font-family: 'Onest-Black' sans-serif;" >16 januar 2025</p>
                    <Image src={hvid_cirkel} alt="hvid cirkel" class="rounded-3xl" />
                    <p class="flex-shrink-0 text-base md:text-base" style="font-family: 'Onest-Black' sans-serif;">Kl. 17-19</p> 
                </div>
            </div>
        
            <!-- Aarhus -->
            <div class=" order-1 pt-16">
                <h3 class="pb-6 text-sm md:text-lg" style="font-family: 'Onest, Black' sans-serif;">AARHUS</h3>
                <div class="flex items-center gap-4 md:gap-14">
                    <p class="flex-shrink-0 text-base md:text-base" style="font-family: 'Onest-Black' sans-serif;">14 januar 2025</p>
                    <Image src={hvid_cirkel} alt="hvid cirkel" class="rounded-3xl" />
                    <p class="flex-shrink-0 text-base md:text-base" style="font-family: 'Onest-Black' sans-serif;">Kl. 17-19</p> 
                </div>
            </div>

           <!-- Online -->
           <div class="pt-16 md:pl-36">
            <h3 class="pb-6 text-sm md:text-lg" style="font-family: 'Onest, Black' sans-serif;">ONLINE</h3>
            <div class="flex items-center gap-4 md:gap-14">
                <p class="flex-shrink-0 text-base md:text-base" style="font-family: 'Onest-Black' sans-serif;">13 november 2024</p>
                <Image src={hvid_cirkel} alt="hvid cirkel" class="rounded-3xl" />
                <p class="flex-shrink-0" style="font-family: 'Onest-Black' sans-serif;">Kl. 17-19</p> 
            </div>
            <div class="flex items-center gap-4 md:gap-14 pt-5">
                <p class="flex-shrink-0 text-base md:text-base" style="font-family: 'Onest-Black' sans-serif;">21 januar 2024</p>
                <Image src={hvid_cirkel} alt="hvid cirkel" class="rounded-3xl" />
                <p class="flex-shrink-0 text-base md:text-base" style="font-family: 'Onest-Black' sans-serif;">Kl. 17-19</p> 
            </div>
        </div>
        </div>
    </div>

    <div class="flex flex-col items-center sm:items-start w-full md:w-full sm:w-2/5 px-10 gap-0 text-center sm:text-left mt-16 md:order-1">
        <div class="relative -top-24 md:relative md:top-[-600px] md:-left-0">
            <Button 
                textMobile="TILMELD MIG INFOMØDER HER"
                textDesktop="TILMELD MIG INFOMØDER HER"
                link="https://www.hojskolendk.dk/infomoeder/"
                backgroundColor="#FF6E00"
                textColor="#FFF"
                size="small"
                target="_blank"
            />
        </div>
    </div>



      <!-- img // ret billedernes højde i mobil-->
      <div class="w-full h-full pl-20 pr-20 object-cover md:w-screen md:h-screen md:ml-16 md:top-20">
        <Image src={infomoedeimg} alt='gruppe af unge mennesker sammen' class="rounded-3xl">
    </div>
</section>