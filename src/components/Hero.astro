---
import { Image } from 'astro:assets';
import MainLayout from "../layouts/MainLayout.astro";
import herobillede from "../assets/images/hero.png";
import logo from "../assets/images/logo.svg";
---

<section class="relative grid grid-cols-1 grid-rows-5 w-screen h-screen">
    <!-- Hero Image -->
    <Image 
        src={herobillede} 
        alt="Hero billede" 
        class="absolute inset-0 w-full h-screen object-cover z-0"
    />

    <!-- Hero billede med tekst -->
    <div class="relative bg-cover bg-center !important">
        <!-- Tekst på herobillede -->
        <section class="absolute top-28 left-0 z-20 p-4 flex flex-col items-start gap-4 md:p-8 md:ml-20 md:mt-8">
            <h1 class="text-4xl uppercase font-bold text-white md:text-8xl" style="font-family: 'Onest-Black', sans-serif;">
                Højskole i udlandet
            </h1>
            <h2 class="text-xl uppercase text-white md:text-4xl" style="font-family: 'Onest-Regular', sans-serif;">
                Eventyrlige højskoleophold i udlandet for unge
            </h2>
        </section>
    </div>
</section>

